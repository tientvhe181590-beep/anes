# =============================================================================
# ANES Environment Variables
# Copy this file to .env and fill in the values
# =============================================================================

# --- Frontend (client/) ---
# Backend API URL (used by Vite proxy in dev, direct in prod)
VITE_API_URL=http://localhost:8080

# --- Backend (server/) ---
# MySQL Database
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/anes_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_password_here

# JWT Authentication
JWT_SECRET=your-256-bit-secret-key-change-in-production
JWT_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=604800000

# AI / Gemini (server-side only â€” NEVER expose to client)
GEMINI_API_KEY=your_gemini_api_key_here

# VNPAY Payment Gateway (server-side only)
VNPAY_TMN_CODE=your_terminal_code
VNPAY_HASH_SECRET=your_hash_secret
VNPAY_PAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:5173/payment/return

# --- Deployment (CI/CD) ---
# AZURE_CREDENTIALS=<set in GitHub Secrets>
# AZURE_STATIC_WEB_APPS_TOKEN=<set in GitHub Secrets>
